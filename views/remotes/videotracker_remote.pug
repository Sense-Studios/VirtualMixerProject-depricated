script(src='/javascripts/remotes/videotracker/file1.js')
script(src='/javascripts/remotes/videotracker/mixer.js')
script(src='/javascripts/remotes/videotracker/tracker.js')
script(src='/javascripts/remotes/videotracker/instruments.js')
script(src='/javascripts/remotes/videotracker/cue_editor.js')
script(src='/javascripts/remotes/videotracker_remote.js')
include ../partials/analytics
